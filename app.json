{
  "name": "Crunchyroll-Download-Telegram-Bot",
  "description": "A Telegram bot to download Crunchyroll episodes (DRM-free, DRM-ready). Uses yt-dlp and supports audio/subtitle selection.",
  "repository": "https://github.com/demonlord2002/cr",
  "keywords": ["python", "telegram", "bot", "yt-dlp", "crunchyroll"],
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true,
      "value": "23559126"
    },
    "API_HASH": {
      "description": "Telegram API Hash from my.telegram.org",
      "required": true,
      "value": "58347a441c011b1b9ee3367ea936dcc4"
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true,
      "value": "8289940670:AAGQ8Z49PV6wZ_sfY5JWl192wPWPWyeBDCk"
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID to restrict bot access",
      "required": true,
      "value": "7813285237"
    },
    "DOWNLOAD_DIR": {
      "description": "Directory path for downloads",
      "required": false,
      "value": "/tmp/downloads"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'Bot deployed successfully!'"
  }
}
